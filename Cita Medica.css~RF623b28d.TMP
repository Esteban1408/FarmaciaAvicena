*{
	padding:0px;}
body{
	min-height:100vh;
	background-image:url(https://png.pngtree.com/thumb_back/fw800/background/20190223/ourmid/pngtree-solid-color-matte-background-blue-gradient-wind-background-color-mattesolid-backgroundblue-image_84871.jpg);
	background-repeat:no-repeat;
	background-size:cover;
	background-position:center;
	background-attachment:fixed;
}

img{
	width:250px;
	padding: 5px;
	margin: center;
}
#REGRESAR #rEGRESAR{
	text-decoration:none;
	width:100px;
	height:100px;
	position:fixed;
	top:0;
	right:0;
	
}
.Mensaje{
	text-align:center;
}
.Mensaje li input{
	text-align:center;
}
.menu{
		width: 1325px;
		margin:auto;
		text-align:center;
		list-style:  none;
		text-decoration: none;
		}
.menu li{
	text-style: none;
	display: inline-block;
 	text-decoration: none;
	border: 1px solid gray;
	padding:7px;
	color:black;
}
.menu li p{
	color: blue;
	text-decoration: none;
	font-size: 100px;
}
.texto{
	background: none;
	margin:none;
	border: 1px solid gray;
}

#borde{
	background:linear-gradient(235deg,#2196F3,#010615,#900c3F);
	border-radius: 40px;
	position:center;
	text-align:center;
	background-position:center;
	
}

#Mensaje{
	text-align:center;
	font-size: 85px;
}
#REGRESAR2 #rEGRESAR2{
	text-decoration:none;
	width:100px;
	height:100px;
	position:fixed;
	top:0;
	right:0;
	text-align:center;
	background:linear-gradient(235deg,#2196F3,#010615,#ff005e);
	border-radius: 30px;
	
}